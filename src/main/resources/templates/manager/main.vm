<script type="text/javascript">
    $(function () {

        $("#jqGrid").jqGrid({
            url: '/admin/cus/list',
            mtype: "GET",
            styleUI: 'AmazeUI',
            datatype: "json",
            autowidth: true,//自动宽
            shrinkToFit: true,
            colNames: ['订单号', '卡券号', '客户名', '订单状态', '联系方式', '下单时间', '操作'],
            colModel: [
                {label: 'userId', name: 'userId', key: true, width: "20%", hidden: true},
                {label: 'cardNum', name: 'cardNum', autowidth: true},
                {label: 'userName', name: 'userName', autowidth: true},
                {label: 'userOrder', name: 'userOrder', autowidth: true},
                {label: 'userPhone', name: 'userPhone', autowidth: true},
                {
                    label: 'userTime',
                    name: 'userTime',
                    autowidth: true
                },
                {name: "edit", index: "edit", autowidth: true}

            ],
            toolbar: [true, "top"],
            rownumbers: true,
            viewrecords: true,
            height: "100%",
            caption: "详情<button>结果</button>",
            rowNum: 10,
            pager: "#jqGridPager",
            gridComplete: function () {         // 数据加载完成后 添加 采购按钮
                var ids = jQuery("#jqGrid").jqGrid('getDataIDs');
                for (var i = 0; i < ids.length; i++) {
                    var id = ids[i];
                    var editBtn = "<input type='button' class='am-btn am-btn-success' " + "onclick=" + "showDetail('" + id + "')" + " value='详情'/>";
                    jQuery("#jqGrid").jqGrid('setRowData', ids[i], {edit: editBtn});
                }
            },
        });
        $(".ui-jqgrid .ui-jqgrid-htable .ui-th-div").attr("style", "height:auto");
    });
    function showDetail(id) {
        location.href = "/admin/cus/one?userId=" + id;
    }
</script>

